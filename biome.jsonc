{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["app.config.*.js", ".output", "node_modules", ".vinxi"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"assists": {
		"actions": {
			"source": {
				"sortJsxProps": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {
						"attributes": ["class", "classList"]
					}
				}
			},
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"noNonNullAssertion": "off" // we need to sometimes
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"linter": { "enabled": true },
		"formatter": { "enabled": true }
	}
}
